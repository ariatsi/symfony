{# templates/product/detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détail du Produit - {{ product.name }}{% endblock %}

{% block body %}
    <h1>Détail du Produit - {{ product.name }}</h1>

    <dl>
        <dt>Nom du Produit</dt>
        <dd>{{ product.name }}</dd>

        <dt>Prix</dt>
        <dd>{{ product.price }} €</dd>

        <dt>Détail</dt>
        <dd>{{ product.Detail }}</dd>
    </dl>

    <a href="{{ path('product_list') }}">Retour à la liste des produits</a>
    </body>
    </html>
{% endblock %}
